<div class="main">
  <h1 class="main__title"><%= page.title %></h1>
  <div class="main__metadata">
    <time datetime="<%= date_xml(page.date) %>" itemprop="datePublished"><%= date(page.date, 'MMM D, YYYY') %></time>
  </div>
  <div class="main__content textblock">
    <div class="textblock__content">
      <%- page.content %>
    </div>
  </div>
  <div class="main__comment">
    <div id="disqus_thread"></div>
  </div>
</div>
